<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:tools="http://schemas.android.com/tools"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="4dp"
                                    android:layout_marginLeft="4dp"
                                    android:layout_marginRight="4dp"
                                    android:layout_marginTop="4dp"
                                    android:clickable="true"
                                    android:focusable="true"
                                    android:foreground="?selectableItemBackground">

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.example.xyzreader.ui.DynamicHeightNetworkImageView
      android:id="@+id/thumbnail"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:background="@color/photo_placeholder"
      android:scaleType="centerCrop"
      />

    <TextView
      android:id="@+id/article_date"
      style="@style/TextAppearance.AppCompat.Caption"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:ellipsize="end"
      android:maxLines="4"
      android:paddingRight="@dimen/material_component_cards_action_button_row_padding"
      android:paddingLeft="@dimen/material_component_cards_action_button_row_padding"
      android:paddingTop="@dimen/material_component_cards_action_button_row_padding"
      tools:text="May 1, 1953"/>

    <TextView
      android:id="@+id/article_title"
      style="@style/TextAppearance.AppCompat.Body1"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:ellipsize="end"
      android:maxLines="4"
      android:paddingRight="@dimen/material_component_cards_action_button_row_padding"
      android:paddingLeft="@dimen/material_component_cards_action_button_row_padding"
      android:paddingTop="@dimen/material_component_cards_action_button_row_padding"
      android:paddingBottom="@dimen/material_component_cards_action_button_row_padding"
      tools:text="Second Variety"/>


    <TextView
      android:id="@+id/article_subtitle"
      style="@style/TextAppearance.AppCompat.Caption"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:ellipsize="end"
      android:maxLines="2"
      android:paddingRight="@dimen/material_component_cards_action_button_row_padding"
      android:paddingLeft="@dimen/material_component_cards_action_button_row_padding"
      android:paddingBottom="@dimen/material_component_cards_primary_title_bottom_padding"
      tools:text="Philip K. Dick"/>
  </LinearLayout>

</android.support.v7.widget.CardView>
